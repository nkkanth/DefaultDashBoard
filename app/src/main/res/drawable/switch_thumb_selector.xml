<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_thumb_selector_outside_circle_color" />
            <corners android:radius="@dimen/switch_thumb_track_selector_radius" />
            <size
                android:width="@dimen/switch_thumb_track_width"
                android:height="@dimen/switch_thumb_track_height" />
            <stroke
                android:width="@dimen/switch_thumb_selector_stroke_width"
                android:color="@color/switch_thumb_selector_stroke" />
        </shape>
    </item>
    <!-- Smaller white circle in front -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="@dimen/switch_thumb_selector_small_circle_stroke_width"
                android:color="@android:color/transparent" />
            <solid android:color="@color/switch_thumb_inner_circle_color" />
            <size
                android:width="@dimen/switch_thumb_selector_inner_circle_width"
                android:height="@dimen/switch_thumb_selector_inner_circle_height" />
        </shape>
    </item>
</layer-list>