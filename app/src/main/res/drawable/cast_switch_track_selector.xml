<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/cast_switch_on_track" />
            <corners android:radius="@dimen/cast_switch_on_track_radius" />
            <size android:width="@dimen/cast_switch_on_track_width" android:height="@dimen/cast_switch_on_track_height" />
            <stroke android:width="@dimen/cast_switch_on_track_stroke_width" android:color="@color/cast_switch_on_track_stroke" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/cast_switch_off_track" />
            <corners android:radius="@dimen/cast_switch_off_track_radius" />
            <size android:width="@dimen/cast_switch_off_track_width" android:height="@dimen/cast_switch_off_track_height" />
            <stroke android:width="@dimen/cast_switch_off_track_stroke_width" android:color="@color/cast_switch_off_track_stroke" />
        </shape>
    </item>
</selector>