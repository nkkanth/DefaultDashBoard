<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Leanback.Browse"/>

    <style name="AppTheme.CustomTitle" parent="AppTheme">
        <item name="browseTitleViewLayout">@layout/view_title</item>
        <item name="browseRowsMarginTop">80dp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="sliderMinMaxValueTextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">
            @org.droidtv.ui.tvwidget2k15:drawable/slider_value_textcolor
        </item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="sliderCurrentValueTextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">
            @org.droidtv.ui.tvwidget2k15:drawable/slider_current_value_textcolor
        </item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="topmenuMessageCountTextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.Transparent.NoTitleBar" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="OptionsMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="FontStyleMoreChapterItemTitleHighlight">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="FontStyleMoreChapterItemTitleDefault">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="FontStyleMoreChapterIconTitleDefault">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>
