<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_menu_weather_view"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false" android:layout_width="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/top_menu_item_margin_top"
            android:layout_marginEnd="@dimen/top_menu_item_margin_end"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/top_menu_item_width">
        <ImageView
            android:id="@+id/top_menu_weather_view_user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="@dimen/top_menu_item_padding"
            android:paddingLeft="@dimen/top_menu_item_padding"
            android:paddingRight="@dimen/top_menu_item_padding"
            android:paddingBottom="@dimen/top_menu_item_padding"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/top_menu_weather_view_user_label"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_menu_non_selected_label_margin_top"
            android:layout_gravity="center_horizontal"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:visibility="invisible"/>
        </LinearLayout>
    </FrameLayout>
