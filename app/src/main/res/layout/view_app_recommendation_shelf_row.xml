<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:lb="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/app_recommendation_shelf_header"
            android:layout_width="@dimen/app_recommendation_shelf_header_width"
            android:layout_height="@dimen/shelf_header_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/app_recommendation_shelf_header_margin_start"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_recommendation_shelf_icon_image_view"
                android:layout_width="@dimen/app_recommendation_shelf_icon_image_width"
                android:layout_height="@dimen/app_recommendation_shelf_icon_image_height"
                android:layout_gravity="center"
                android:background="@drawable/shelf_icon_circle_background"
                android:padding="@dimen/app_recommendation_shelf_icon_image_padding"/>

            <TextView
                android:id="@+id/app_recommendation_shelf_title"
                android:layout_width="@dimen/app_recommendation_shelf_title_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/app_recommendation_shelf_title_margin_top"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal|top"
                android:maxLines="2"
		android:breakStrategy="balanced"
                android:textColor="@android:color/white"
                android:textSize="@dimen/app_recommendation_shelf_title_text_size"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/app_recommended_preview_programs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/app_recommendation_shelf_header"
            android:textStyle="bold" />

        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/row_content"
            style="?attr/rowHorizontalGridStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/app_recommendation_gridview_margin_start"
            android:layout_toEndOf="@+id/app_recommendation_shelf_header"
            android:layout_below="@id/app_recommended_preview_programs_title"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="0dp"
            android:paddingStart="@dimen/app_recommendation_row_content_padding_start"
            android:paddingTop="0dp"
            lb:rowHeight="wrap_content"/>

    </RelativeLayout>
</merge>
