<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/view_chapter_header"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusable="true">

    <ImageView android:id="@+id/chapter_icon_imageview"
               xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="@dimen/chapter_header_icon_non_highlighted_width"
               android:layout_height="@dimen/chapter_header_icon_non_highlighted_height"
               android:layout_gravity="center_vertical"
               android:scaleType="centerInside"
               android:src="@drawable/icon_1025_cast_n_48x48"/>

    <TextView android:id="@+id/chapter_title_textview"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="144dp"
              android:layout_height="@dimen/chapter_header_title_non_highlighted_height"
              android:layout_gravity="center_vertical"
              android:ellipsize="end"
              android:layout_marginStart="@dimen/chapter_header_title_non_highlighted_margin_start"
              android:focusable="true"
              android:singleLine = "true"
              android:scrollHorizontally = "true"
              android:fontFamily="sans-serif"
              android:gravity="center_vertical"
              android:textSize="@dimen/chapter_header_title_non_highlighted_text_size"/>
</LinearLayout>
