<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/configure_app_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/configure_app_icon"
        android:layout_width="@dimen/app_icon_width"
        android:layout_height="@dimen/app_icon_height"
        android:layout_alignParentStart="true"
		android:layout_centerVertical ="true"
        android:layout_marginStart="@dimen/app_icon_left_margin"
        android:layout_marginTop="@dimen/app_icon_top_margin" />

    <TextView
        android:id="@+id/configure_app_name"
        android:layout_width="@dimen/app_name_width"
        android:layout_height="@dimen/app_name_height"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/app_name_left_margin"
        android:layout_toEndOf="@+id/configure_app_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="@dimen/app_name_padding"
        android:textSize="@dimen/app_name_text_size" />

    <Switch
        android:id="@+id/configure_app_enabled_state_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/app_enabled_state_switch_start_margin"
        android:layout_marginEnd="@dimen/app_name_left_margin"
		android:layout_centerVertical="true"
        android:checked="true"
        android:focusable="false" />

</RelativeLayout>