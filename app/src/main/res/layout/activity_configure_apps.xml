<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/app_management_width"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/dynamicblur"
                tools:context=".AbstractConfigureAppsActivity">

    <org.droidtv.defaultdashboard.ui.view.DualTextHeaderView
        android:id="@+id/configure_apps_header"
        android:layout_width="@dimen/app_management_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <ListView
        android:id="@+id/configure_apps_list"
        android:layout_width="@dimen/app_management_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/configure_apps_header"
        android:divider="@android:color/transparent"
        android:scrollbars="none"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"/>

</RelativeLayout>