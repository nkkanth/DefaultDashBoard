<LinearLayout android:id="@+id/vod_hover_card_panel"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/hovercard_width"
              android:layout_height="@dimen/hovercard_height"
              android:layout_marginTop="@dimen/smart_info_hovercard_margin_top"
              android:orientation="vertical">

    <TextView
        android:id="@+id/smart_info_hovercard_shelf_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif"
        android:gravity="top|start"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/hovercard_title_text_size"/>

    <TextView
        android:id="@+id/smart_info_hovercard_shelf_item_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hovercard_subtext_margin_top"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="top|start"
        android:maxLines="1"
        android:textColor="@color/hovercard_subtitle_text_color"
        android:textSize="@dimen/hovercard_subtext_text_size"/>

    <TextView
        android:id="@+id/smart_info_hovercard_shelf_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hovercard_description_margin_top"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="top|start"
        android:maxLines="3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/hovercard_description_text_size"/>
</LinearLayout>