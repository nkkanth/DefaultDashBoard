<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:lb="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/shelf_header"
            android:layout_width="@dimen/sources_shelf_header_width"
            android:layout_height="@dimen/shelf_header_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/sources_shelf_header_margin_start"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shelf_icon_image_view"
                android:layout_width="@dimen/sources_shelf_header_icon_width"
                android:layout_height="@dimen/sources_shelf_header_icon_height"
                android:layout_gravity="center"
                android:background="@drawable/shelf_icon_circle_background"
                android:padding="@dimen/sources_shelf_header_icon_padding"/>

            <TextView
                android:id="@+id/shelf_title"
                android:layout_width="@dimen/sources_shelf_header_title_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sources_shelf_header_title_margin_top"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal|top"
                android:maxLines="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sources_shelf_header_title_text_size"
                android:visibility="gone"/>

        </LinearLayout>

        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/row_content"
            style="?attr/rowHorizontalGridStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/sources_shelf_gridview_margin_start"
            android:layout_toEndOf="@+id/shelf_header"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="0dp"
            android:paddingStart="@dimen/shelf_row_horizontal_gridview_padding"
            android:paddingTop="0dp"
            lb:rowHeight="wrap_content"/>
    </RelativeLayout>
</merge>