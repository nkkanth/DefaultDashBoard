<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/country_icon_image_view"
        android:layout_width="@dimen/country_icon_image_width"
        android:layout_height="@dimen/country_icon_image_height"
        android:background="@drawable/apps_chapter_country_icon_corner_radius"
        android:layout_margin="@dimen/country_icon_image_view_margin"/>

    <TextView
        android:id="@+id/country_icon_text_view"
        android:layout_width="@dimen/country_icon_image_width"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/country_icon_text_view_margin_top"
        android:layout_marginStart="@dimen/country_icon_text_view_margin"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/country_icon_text_view_text_size"
        android:visibility="invisible" />
</merge>